<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>

    <body>
        <%- include('../nav.ejs') %>
        <div class="ms-4 mt-3">
            <h3><%= author.username %>의 페이지</h3>
            <% if (user && !user._id.equals(author._id) ) { %>
            <a
                type="button"
                class="btn btn-secondary mt-2 chat-start"
                data-id="<%= author._id %>"
                name="<%= author.username %>"
                >채팅하기</a
            >
            <% } %>
        </div>

        <% if (postList.length == 0) { %>
        <div class="container mx-3 my-5">목록이 없습니다</div>
        <% } %> <% for (let i = 0; i < postList.length; i++){ %>
        <div
            class="card my-3 mx-4 px-3 py-3 listcard"
            style="max-width: 100%; min-height: 100%"
        >
            <a href="/post/detail/<%= postList[i]._id %>" class="none">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img
                            src="<%= postList[i].img != '' ? postList[i].img : '/pencil1.png' %>"
                            class="img-fluid rounded-start"
                            alt="..."
                            style="width: 100%; aspect-ratio: 1"
                        />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= postList[i].title %></h5>
                            <p class="card-text" style="white-space: pre-line">
                                <% for (let j = 0; j < 8; j++) { %> <%=
                                postList[i].content.split('\n')[j] %> <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <% } %>

        <script>
            document
                .querySelector('.chat-start')
                .addEventListener('click', async function (e) {
                    const authorId = e.target.dataset.id;
                    const authorName = e.target.name;
                    const data = {
                        authorId: authorId,
                        authorName: authorName,
                    };

                    const response = await fetch('/chat/chatroom-add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data),
                    });

                    if (response.ok) {
                        const chatroomId = await response.json(); // 서버에서 보낸 데이터를 JSON 형식으로 파싱하여 받아옴
                        console.log('Received chatroom ID:', chatroomId);

                        location.href = `/chat/${chatroomId}`;
                    }
                });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
