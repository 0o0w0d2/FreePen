<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>

    <body>
        <%- include('../nav.ejs') %>
        <div class="ms-4 mt-3">
            <h3><%= postList[0].authorName %>의 페이지</h3>
            <a type="button" class="btn btn-secondary mt-2">채팅창</a>
        </div>

        <% if (postList.length == 0) { %>
        <div class="container mx-3 my-5">목록이 없습니다</div>
        <% } %> <% for (let i = 0; i < postList.length; i++){ %>
        <div
            class="card my-3 mx-4 px-3 py-3 listcard"
            style="max-width: 100%; min-height: 100%"
        >
            <a href="/post/detail/<%= postList[i]._id %>" class="none">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img
                            src="<%= postList[i].img != '' ? postList[i].img : '/pencil1.png' %>"
                            class="img-fluid rounded-start"
                            alt="..."
                            style="width: 100%; aspect-ratio: 1"
                        />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= postList[i].title %></h5>
                            <p class="card-text" style="white-space: pre-line">
                                <% for (let j = 0; j < 8; j++) { %> <%=
                                postList[i].content.split('\n')[j] %> <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <% } %>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
