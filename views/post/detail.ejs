<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>
    <body>
        <%- include('../nav.ejs') %>
        <!-- 버튼 위치 오른쪽으로 붙게 해야 됨 -->
        <% if (user && user._id.equals(post.author)) { %>
        <div class="ms-3 mt-3 mb-3">
            <a
                href="/post/edit/<%= post._id %>"
                type="button"
                class="btn btn-sm btn-outline-primary"
            >
                수정</a
            >
            <button
                class="btn btn-sm btn-outline-danger delete"
                data-id="<%= post._id %>"
            >
                삭제
            </button>
        </div>
        <% } %>

        <div
            class="card mx-3 <%= user && user._id.equals(post.author) ? 'my-2' : 'my-5' %>"
        >
            <h4 class="card-header"><%= post.title %></h4>
            <% if (post.img != '') { %>
            <img
                src="<%= post.img %>"
                class="card-img-top mx-4 mt-3"
                alt="..."
                style="width: 60%; height: auto"
            />
            <% } %>
            <div class="card-body mx-3 mb-4">
                <p class="card-text" style="white-space: pre-line">
                    <%= post.content %>
                </p>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary"
                    >작성자:
                    <a
                        href="/user/post/<%= post.author %>"
                        style="text-decoration: none; color: inherit"
                        ><%= post.authorName %></a
                    ></small
                >
            </div>
        </div>
        <h4 class="ms-3 mt-5">Comment</h4>
        <% if (comments.length == 0) { %>
        <div class="container my-5 no-reply">댓글이 없습니다.</div>
        <% } %> <% for (let i=0; i < comments.length; i++) { %>
        <div class="card mx-3 my-3 commentcard">
            <div class="card-body">
                <h5 class="card-title">
                    <a
                        href="/user/post/<%= comments[i].author %>"
                        style="text-decoration: none; color: inherit"
                        ><%= comments[i].authorName %></a
                    >
                </h5>
                <span class="card-text ms-3"><%= comments[i].content %></span>
                <% if (user) { %> <% if (user._id.equals(comments[i].author)) {
                %>
                <button
                    class="comment-del btn btn-sm btn-outline-danger"
                    style="float: right"
                    data-id="<%= comments[i]._id %>"
                >
                    삭제
                </button>
                <% } %> <% } %>
            </div>
        </div>
        <% } %> <% if (user) { %>
        <div class="card mx-3 my-3 card-form">
            <div class="card-body">
                <h5 class="card-title"><%= user.username %></h5>
                <div>
                    <input
                        class="form-control comment"
                        style="width: 75%; display: inline-block"
                    />
                    <button
                        class="btn btn-secondary comment-add"
                        style="display: inline-block"
                    >
                        작성
                    </button>
                </div>
            </div>
        </div>
        <% } %>

        <script>
            for (let i = 0; i < parseInt('<%= comments.length %>'); i++) {
                document
                    .querySelectorAll('.comment-del')
                    [i].addEventListener('click', async function (e) {
                        try {
                            const commentId = e.target.dataset.id;

                            // ajax를 이용해서 server에 commentId 보내기
                            // % 새로 단 댓글에 대해서 삭제 버튼이 활성화되지 않는 문제 해결해야 함 %
                            const response = await fetch(
                                `/comment/${commentId}`,
                                {
                                    method: 'DELETE',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                },
                            );
                            if (response.ok) {
                                // db에서 res가 OK일 때, 댓글이 삭제되도록 설정해야 함
                                const commentCard =
                                    e.target.closest('.commentcard');
                                commentCard.style.display = 'none';

                                console.log('댓글 삭제 완료');
                            } else {
                                console.error('댓글 삭제 실패');
                            }
                        } catch (err) {
                            console.log(err);
                        }
                    });
            }
        </script>

        <script>
            // 추가 안함 : comment-add 버튼을 누르면 comment가 작성 -> 해야할 거 무슨 버튼 누르면 card-form이 나타나게
            document
                .querySelector('.comment-add')
                .addEventListener('click', async function (e) {
                    try {
                        const comment =
                            document.querySelector('.comment').value;
                        const data = {
                            comment: comment,
                        };
                        const postId = '<%= post._id %>';
                        const response = await fetch(`/comment/${postId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(data),
                        });

                        if (response.ok) {
                            const noReply = document.querySelector('.no-reply');
                            if (noReply) {
                                noReply.style.display = 'none';
                            }
                            // 새로 단 댓글에 대해서 삭제 버튼이 활성화되지 않는 문제 해결해야 함
                            // 입력한 comment 보이게 하기 ( card > cardBody > author, comment, button )

                            // card 생성
                            const cardElement = document.createElement('div');
                            cardElement.classList.add('card', 'mx-3', 'my-3');

                            // cardBody 생성
                            const cardBodyElement =
                                document.createElement('div');
                            cardBodyElement.classList.add('card-body');

                            // author 생성
                            const authorElement = document.createElement('h5');
                            authorElement.classList.add('card-title');
                            authorElement.textContent =
                                '<%= (user && user.username) ? user.username : "Anonymous" %>';

                            // comment 생성
                            const commentElement =
                                document.createElement('span');
                            commentElement.classList.add('card-text', 'ms-3');
                            commentElement.textContent = comment;

                            // del button 생성
                            const commentDelElement =
                                document.createElement('button');
                            commentDelElement.classList.add(
                                'comment-del',
                                'btn',
                                'btn-sm',
                                'btn-outline-danger',
                            );
                            commentDelElement.style.float = 'right';
                            commentDelElement.textContent = '삭제';

                            // 카드 본문에 작성자과 댓글을 추가
                            cardBodyElement.appendChild(authorElement);
                            cardBodyElement.appendChild(commentElement);
                            cardBodyElement.appendChild(commentDelElement);

                            // 카드에 카드 본문을 추가
                            cardElement.appendChild(cardBodyElement);

                            // card-form( 댓글 생성 폼 ) 위에 작성한 cardElement 추가
                            const cardForm =
                                document.querySelector('.card-form');
                            cardForm.parentNode.insertBefore(
                                cardElement,
                                cardForm,
                            );

                            document.querySelector('.comment').value = '';

                            // 댓글이 작성되고 나서 아래로 스크롤
                            window.scrollTo({
                                top: document.body.scrollHeight,
                                behavior: 'smooth',
                            });
                        }
                    } catch (err) {
                        console.error(err);
                    }
                });
        </script>

        <script>
            document
                .querySelector('.delete')
                .addEventListener('click', async function (e) {
                    try {
                        // ajax 로 post 삭제 요청
                        const postId = e.target.dataset.id;
                        const response = await fetch(`/post/detail/${postId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        });

                        if (response.ok) {
                            location.href = '/post/list';
                        } else {
                            console.error('삭제 실패');
                        }
                    } catch (err) {
                        console.error('네트워크 오류', err);
                    }
                });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
