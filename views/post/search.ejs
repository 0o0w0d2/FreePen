<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>

    <body>
        <%- include('../nav.ejs') %>

        <div class="container-fluid mt-3 mb-3 d-flex align-items-center">
            <input
                class="form-control me-2 search"
                type="search"
                placeholder="Search"
                aria-label="Search"
                name="search"
            />
            <button class="btn btn-outline-secondary search-btn" type="submit">
                Search
            </button>
        </div>
        <div class="mt-4 ms-3"><h5>검색결과</h5></div>
        <% if (postList.length == 0) { %>
        <div class="container mx-3 my-5">목록이 없습니다</div>
        <% } %> <% for (let i = 0; i < postList.length; i++){ %>
        <div
            class="card my-3 mx-4 px-3 py-3 listcard"
            style="max-width: 100%; min-height: 100%"
        >
            <a href="/post/detail/<%= postList[i]._id %>" class="none">
                <div class="row g-0">
                    <div class="col-md-4">
                        <% if (postList[i].img != '') { %>
                        <img
                            src="<%= postList[i].img %>"
                            class="img-fluid rounded-start"
                            alt="..."
                            style="width: 100%; aspect-ratio: 1"
                        />
                        <% } else { %>
                        <img
                            src="/pencil1.png"
                            class="img-fluid rounded-start"
                            alt="..."
                        />
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= postList[i].title %></h5>
                            <p class="card-text" style="white-space: pre-line">
                                <% for (let j = 0; j < 8; j++) { %> <%=
                                postList[i].content.split('\n')[j] %> <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <% } %>

        <nav aria-label="Page navigation">
            <ul class="pagination d-flex justify-content-center">
                <% if ( page == 0 ) { %>
                <li class="page-item previous disabled">
                    <a class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% } else { %>
                <li class="page-item previous">
                    <a class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% } %>

                <li class="page-item next">
                    <a class="page-link" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <script>
            document
                .getElementsByClassName('search-btn')[0]
                .addEventListener('click', async (e) => {
                    try {
                        const search = document.querySelector('.search').value;
                        location.href = `/post/search?value=${search}`;
                    } catch (err) {
                        console.error('네트워크 오류', err);
                    }
                });
        </script>

        <script>
            document
                .querySelector('.previous')
                .addEventListener('click', (e) => {
                    console.log('이전 버튼 클릭');

                    let currentPage = '<%= parseInt(page) %>';

                    if (currentPage > 0) {
                        currentPage--;

                        location.href = `/post/search?value=${'<%= search %>'}&page=${currentPage}`;
                    }
                });
        </script>

        <script>
            // 데이터 가져와서 데이터를 바꿔치기 하는 코드를 작성하자
            // ajax 이용해서 /post/search?value=${search}&page=?? 이런식으로 ?
            document.querySelector('.next').addEventListener('click', (e) => {
                console.log('다음 버튼 클릭');

                let currentPage = '<%= parseInt(page) %>';

                if (currentPage === 0) {
                    currentPage = 1;
                } else {
                    currentPage++;
                }

                location.href = `/post/search?value=${'<%= search %>'}&page=${currentPage}`;
            });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
