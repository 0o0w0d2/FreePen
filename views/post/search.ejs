<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>

    <body>
        <%- include('../nav.ejs') %>

        <div class="container-fluid mt-3 mb-3 ms-3">
            <form class="d-flex" role="search" action="/post/search">
                <input
                    class="form-control me-2"
                    type="search"
                    placeholder="Search"
                    aria-label="Search"
                    name="search"
                />
                <button class="btn btn-outline-secondary me-4" type="submit">
                    Search
                </button>
            </form>
        </div>
        <div class="mt-4 ms-3"><h5>검색결과</h5></div>

        <% if (postList.length == 0) { %>
        <div class="container mx-3 my-5">목록이 없습니다</div>
        <% } %> <% for (let i = 0; i < postList.length; i++){ %>
        <div
            class="card my-3 mx-4 px-3 py-3 listcard"
            style="max-width: 100%; min-height: 100%"
        >
            <a href="/post/detail/<%= postList[i]._id %>" class="none">
                <div class="row g-0">
                    <div class="col-md-4">
                        <% if (postList[i].img != '') { %>
                        <img
                            src="<%= postList[i].img %>"
                            class="img-fluid rounded-start"
                            alt="..."
                            style="width: 100%; aspect-ratio: 1"
                        />
                        <% } else { %>
                        <img
                            src="/pencil1.png"
                            class="img-fluid rounded-start"
                            alt="..."
                        />
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= postList[i].title %></h5>
                            <p class="card-text" style="white-space: pre-line">
                                <% for (let j = 0; j < 8; j++) { %> <%=
                                postList[i].content.split('\n')[j] %> <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <% } %>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
