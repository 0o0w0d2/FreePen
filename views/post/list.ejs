<!DOCTYPE html>
<html lang="en">
    <%- include('../head.ejs') %>

    <body>
        <%- include('../nav.ejs') %>

        <div class="container-fluid mt-3 mb-3 d-flex align-items-center">
            <input
                class="form-control me-2 search"
                type="search"
                placeholder="Search"
                aria-label="Search"
                name="search"
            />
            <button class="btn btn-outline-secondary search-btn" type="submit">
                Search
            </button>
        </div>

        <% if (postList.length == 0) { %>
        <div class="container mx-3 my-5">목록이 없습니다</div>
        <% } %> <% for (let i = 0; i < postList.length; i++){ %>
        <div
            class="card my-3 mx-4 px-3 py-3 listcard"
            style="max-width: 100%; min-height: 100%"
        >
            <a href="/post/detail/<%= postList[i]._id %>" class="none">
                <div class="row g-0">
                    <div class="col-md-4">
                        <% if (postList[i].img != '') { %>
                        <img
                            src="<%= postList[i].img %>"
                            class="img-fluid rounded-start"
                            alt="..."
                            style="width: 100%; aspect-ratio: 1"
                        />
                        <% } else { %>
                        <img
                            src="/pencil1.png"
                            class="img-fluid rounded-start"
                            alt="..."
                        />
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= postList[i].title %></h5>
                            <p class="card-text" style="white-space: pre-line">
                                <% for (let j = 0; j < 8; j++) { %> <%=
                                postList[i].content.split('\n')[j] %> <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <% } %>

        <nav
            aria-label="Page navigation example"
            class="d-flex justify-content-center"
        >
            <ul class="pagination">
                <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
                    <a
                        class="page-link"
                        href="/post/list/<%= parseInt(page) - 1 %>"
                        aria-label="Previous"
                    >
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item <%= page == 1 ? 'active' : '' %>">
                    <a
                        class="page-link"
                        href="/post/list/<%= page == 1 ? 1 : parseInt(page) - 1 %>"
                        ><%= page == 1 ? 1 : parseInt(page) - 1 %></a
                    >
                </li>
                <li
                    class="page-item <%= page == 1 && 2 > maxPage ? 'disabled' : (parseInt(page) > maxPage ? 'disabled' : '') %> <%= page != 1 ? 'active' : '' %>"
                >
                    <a
                        class="page-link"
                        href="/post/list/<%= page == 1 ? 2 : parseInt(page) %>"
                        ><%= page == 1 ? 2 : page %></a
                    >
                </li>
                <li
                    class="page-item <%= page == 1 && 3 > maxPage ? 'disabled' : (parseInt(page) + 1 > maxPage ? 'disabled' : '') %>"
                >
                    <a
                        class="page-link"
                        href="/post/list/<%= page == 1 ? 3 : parseInt(page) + 1 %>"
                        ><%= page == 1 ? 3 : parseInt(page) + 1 %></a
                    >
                </li>
                <li
                    class="page-item <%= parseInt(page) + 1 > maxPage ? 'disabled' : '' %>"
                >
                    <a
                        class="page-link"
                        href="/post/list/<%= parseInt(page) + 1 %>"
                        aria-label="Next"
                    >
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <script>
            document
                .getElementsByClassName('search-btn')[0]
                .addEventListener('click', async (e) => {
                    try {
                        const search = document.querySelector('.search').value;
                        location.href = `/post/search?value=${search}`;
                    } catch (err) {
                        console.error('네트워크 오류', err);
                    }
                });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
